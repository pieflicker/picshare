<!DOCTYPE html>
<html>
  <head>
    <title>Picshare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="body">

  	<div id="header"> 

		  <div id="header_img">
		  	<p>Yasuka & Greg's Picshare</p>
		  		<div id="logged_in">
			  		<ul> 
			  			<% if current_user	%>
			  				<li>Logged in as <%= current_user.first_name.humanize %> - <%= link_to "Log out", logout_path, method: "delete" %> </li>
			  			<% else %>
			  				<li><%= link_to "Sign up", new_user_path %> or <%= link_to "Log in", login_path %></li>
			  			<%end%>
			  		</ul>	
		  		</div>

		  </div>

		  <div id="nav_bar">
		  	<ul id="list">
		  		<a href="/"><li class="nav_button"> Home </li></a>
		  		<a href=""><li class="nav_button"> My Pictures </li></a>
		  		<a href="/upload"><li class="nav_button"> Upload </li></a>
		  		<a href=""><li class="nav_button"> User Galleries </li></a>
		  	</ul>

		  	<div id="current_user">
		  	
		  	</div>

		  </div>

	  </div>

  	<div id="content">
    	<%= yield %>
    </div>

  </body>
</html>
